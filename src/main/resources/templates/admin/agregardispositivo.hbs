<title>Agregar Dispositivo</title>
{{#partial "contenido"}}
<div class="container">
   <div class="card mx-5">
   <h5 class="card-header primary-color white-text text-center py-4"><strong>Nuevo Dispositivo</strong></h5>
   <form class="text-center" method="post" action="/admin/agregardispositivo" style="color: #757575;">
    <div class="card-body pt-0 px-5">
    	
    	<div class="row py-3">
    		<div class="md-form col-md-6">
     			<input type="text" class="form-control" id="name" name="nombre" placeholder="Nombre">
			{{#if Notnombre}}
  	 			<div class="text-left red-text">
        			Por favor escriba el nombre del dispositivo.
      			</div>				
			{{/if}}	
    		</div>
    		<div class="md-form col-md-6">
     			<input type="text" class="form-control" id="name" name="equipo" placeholder="Equipo">
			{{#if Notequipo}}
  	 			<div class="text-left red-text">
        			Por favor escriba el equipo.
      			</div>				
			{{/if}}
     		</div>
    	</div>
    	
    	<div class="row justify-content-around py-3"> 		
			<div class="custom-control custom-checkbox col-3">
  			<input type="checkbox" name="inteligente" class="custom-control-input" id="defaultChecked2" value="inteligente" unchecked>
  			<label class="custom-control-label" for="defaultChecked2">¿Es Inteligente?</label>
			</div>
			<div class="custom-control custom-checkbox col-3">
  			<input type="checkbox" name="bajoConsumo" class="custom-control-input" id="defaultChecked3" value="bajoconsumo" unchecked>
  			<label class="custom-control-label" for="defaultChecked3">¿Es Bajo Consumo?</label>
			</div>
    	</div>
    	
    	<div class="row py-3">
    		<div class="md-form col-md-4">
     			<input type="text" class="form-control" id="name" name="consumo" placeholder="Consumo Por Hora (Kw)">
			{{#if Notconsumo}}
  	 			<div class="text-left red-text">
        			Escriba un consumo por Hora
      			</div>				
			{{/if}}
    		</div>
    		<div class="md-form col-md-4">
    	 		<input type="text" class="form-control" id="name" name="consumoMinimo" placeholder="Consumo Minimo">
			{{#if Notminimo}}
  	 			<div class="text-left red-text">
        			Escriba el consumo Minimo.
      			</div>				
			{{/if}}
    		</div>
    		<div class="md-form col-md-4">
	     		<input type="text" class="form-control" id="name" name="consumoMaximo" placeholder="Consumo Maximo">
			{{#if Notmaximo}}
  	 			<div class="text-left red-text">
        			Escriba el consumo Maximo.
      			</div>				
			{{/if}}
    		</div>
    	</div>
        
        <button class="btn btn-primary" type="submit">Agregar</button>
        
    </div>
   </form>
   
   </div>
</div>



{{/partial}}
{{>plantilla.hbs}}